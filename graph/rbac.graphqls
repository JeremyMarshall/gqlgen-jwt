# GraphQL schema example
#
# https://gqlgen.com/getting-started/


type Role {
  name: String!
  permissions(name: String): [String]
  parents(name: String): [String]
}

input AddRole {
  name: String!
  permissions: [String]
  parents: [String]
}

input DeleteRole {
  name: String!
  cascade: Boolean!
}

input DeletePermission {
  name: String!
  permission: String!
}
